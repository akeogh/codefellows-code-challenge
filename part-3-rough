function Book (author, title, dewey) {
	this.author = author;
	this.title = title;
	this.dewey = dewey;
	this.checkedOut = false;

	this.toString = function() {
		var text = this.title + ", " + this.author + ", " + this.dewey + ".";
		if (this.checkedOut) {
			text +=  " This book is currently checked out.";
		} else {
			text += " This book is available!";
		}
		console.log(text);
	};
}

function Shelf () {
	this.books = [];
  
	this.addBook = function(newBook) {
		this.books.push(newBook);
	};
  
	this.removeBook = function(dewey) {

	};
  
	this.toString = function() {
		console.log("This shelf has " + this.books.length + " books:");
		for (var i = 0; i < this.books.length; i++) {
			this.books[i].toString();
		}
	};
}

var testbook = new Book("Guy Williams", "The Greatest Book", 3843);
var testbook2 = new Book("OtherGuy Stinks", "The Worst Book", 2314);
testbook.toString();
testbook2.toString();

var testshelf = new Shelf();
testshelf.addBook(testbook);
testshelf.addBook(testbook2);
testshelf.toString();
